<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="egaas.org.egaas.VersionActivityFragment"
    tools:showIn="@layout/activity_version"
    android:background="@color/colorPrimary"
    >

    <Button
        android:id="@+id/stable_server_button"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/stable_server_button"
        style="@style/AlertDialog.AppCompat"/>

    <Button
        android:id="@+id/dev_server_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/dev_server_button"
        style="@style/AlertDialog.AppCompat"
        />

</LinearLayout>